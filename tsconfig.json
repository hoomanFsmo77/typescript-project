{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES5",
    "module": "AMD",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./webpack.dev.config.ts","./webpack.prod.config.ts"]
}